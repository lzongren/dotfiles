call plug#end()
filetype plugin indent on

" =============
"  custom key
" =============
" add a new line without entering insert mode
noremap <CR> o<Esc>

" map backspce to delete a character
noremap <BS> X

" map ctrl+c and ctrl+v
noremap <C-c> y
noremap <C-v> P

" cancel searched highlight
noremap ; :nohlsearch<CR>

" navigating for long lines
map j gj
map k gk
map <UP> gk
map <DOWN> gj
imap <UP> <ESC>gk<RIGHT>i
imap <DOWN> <ESC>gj<RIGHT>i

" select ALL
map <C-A> ggVG

" coc.nvim configuration
" Use tab for trigger completion with characters ahead and navigate
inoremap <silent><expr> <TAB>
      \ coc#pum#visible() ? coc#pum#next(1) :
      \ CheckBackspace() ? "\<Tab>" :
      \ coc#refresh()
inoremap <expr><S-TAB> coc#pum#visible() ? coc#pum#prev(1) : "\<C-h>"

function! CheckBackspace() abort
  let col = col('.') - 1
  return !col || getline('.')[col - 1]  =~# '\s'
endfunction

" Show line number
set number

" Set tab length
set smartindent
set tabstop=4
set shiftwidth=4
set autoindent

" Set tagbar show


" Set syntax on
syntax on

" Enable using clipboard
set clipboard=unnamed

" ALE configuration for Python
" Set line length to 88 to match Black formatter
let g:ale_python_flake8_options = '--max-line-length=88'
let g:ale_python_pylint_options = '--max-line-length=88'
let g:ale_python_pycodestyle_options = '--max-line-length=88'

" Set Black executable path (for pyenv)
let g:ale_python_black_executable = '/Users/lzongren/.pyenv/shims/black'

" Enable Black as fixer
let g:ale_fixers = {
\   'python': ['black'],
\}

" Auto-fix on save
let g:ale_fix_on_save = 1
