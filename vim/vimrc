" Easy version Vimrc

set nocompatible
filetype off

" vim-plug configuration
if has("win32") || has("win64")
  call plug#begin('$VIM\vimfiles\plugged')
else
  call plug#begin('~/.vim/plugged')
endif

" Core plugins
Plug 'xuhdev/SingleCompile'
